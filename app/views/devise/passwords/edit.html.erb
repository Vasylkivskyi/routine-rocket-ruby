<h1 class="text-center text-2xl">Change your password</h1>
<div class="w-full flex justify-center mt-4">
  <div class="card bg-base-100 w-full max-w-sm shrink-0 shadow-2xl">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "card-body" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-controll">
        <%= f.label :password, class: "label" do %>
          <span class="label-text">New password</span>
        <% end %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full mt-2" %>
      </div>
      <div class="form-controll">
        <%= f.label :password_confirmation, class: "label" do %>
          <span class="label-text">Confirm new password</span>
        <% end %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full mt-2" %>
      </div>
      <div class="form-controll">
        <%= f.submit "Change my password", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="card-body">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
